stage('Deploy Frontend (Nginx)') {
            steps {
                sh """
                ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ec2-user@${env.WEB_IP} "
                    sudo yum install git -y
                    
                    # 1. Clean and Clone
                    sudo rm -rf /usr/share/nginx/html/*
                    sudo rm -rf /tmp/app
                    sudo git clone https://github.com/techbleat/fruits-veg_market.git /tmp/app
                    
                    # 2. Move files
                    sudo cp -r /tmp/app/* /usr/share/nginx/html/
                    
                    # 3. FIX: Path Permissions
                    # Nginx needs +x (execute) on every folder in the path to 'reach' the html folder
                    sudo chmod 755 /usr/share/nginx
                    sudo chmod 755 /usr/share/nginx/html
                    
                    # 4. FIX: File Permissions
                    sudo chown -R nginx:nginx /usr/share/nginx/html
                    sudo find /usr/share/nginx/html -type d -exec chmod 755 {} +
                    sudo find /usr/share/nginx/html -type f -exec chmod 644 {} +
                    
                    # 5. FIX: SELinux (Very common in Amazon Linux 2023)
                    # This tells the OS 'it is okay for the webserver to use these files'
                    sudo chcon -Rt httpd_sys_content_t /usr/share/nginx/html
                    
                    sudo systemctl restart nginx
                "
                """
            }
        }
